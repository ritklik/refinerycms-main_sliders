<ul>
  <% if ::Refinery::MainSliders::Admin::MainSlidersController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.main_sliders_admin_main_sliders_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_main_sliders_admin_main_slider_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::MainSliders::Admin::MainSlidersController.sortable? && ::Refinery::MainSliders::MainSlider.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Main Sliders"),
                 refinery.main_sliders_admin_main_sliders_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Main Sliders"),
                 refinery.main_sliders_admin_main_sliders_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
